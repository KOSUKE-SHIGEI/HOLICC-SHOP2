            </div>
{% endcomment %}
            <div class="section-product__detail">
              {{ product.description }}
            </div>

            <div class="section-product__form">
              <div class="product__form-container">
                <div class="product__form-wrapper">
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
