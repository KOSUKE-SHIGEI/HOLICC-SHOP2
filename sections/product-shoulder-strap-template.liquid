    $(document).on('click', '#NullsGiftWrapTitle', function(){
      var a = $('#NullsgiftWrap');
      if(a.prop('checked')){
        a.prop('checked', false);
      }else{
        a.prop('checked', true);
      }
    });
  $(function(){
    $('a[href^="#"]').click(function(e) {
      var href = $(this).attr("href");
      var target = $(href == "#" || href == "" ? 'html' : href);
      var position = target.offset().top;

      $.when(
        $("html, body").animate({
          scrollTop: position
        }, 400, "swing"),
        e.preventDefault(),
      ).done(function() {
        var diff = target.offset().top;
        if (diff === position) {
        } else {
          $("html, body").animate({
            scrollTop: diff
          }, 10, "swing");
        }
      });
    });

    $(document).scroll(function(){
      var scrollStart = $('body').offset().top;
      var scrollEnd = $('#fixed-scroll-end').offset().top;
      var distance = 0;
      distance = $(this).scrollTop();
      if (scrollStart <= distance) {
        $('.fixed-footer').addClass('active');
      } else if (scrollStart >= distance) {
        $('.fixed-footer').removeClass('active');
      }

      if (scrollEnd <= distance) {
        $('.fixed-footer').addClass('none');
      } else{
        $('.fixed-footer').removeClass('none');
      }
    });


    Delighters.config({    
      start: 0.9,
    });

  });
  </script>

